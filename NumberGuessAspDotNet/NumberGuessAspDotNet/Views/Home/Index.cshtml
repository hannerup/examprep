@{
    ViewData["Title"] = "Guess the Number";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>Welcome to the Guesser Game</h1>
    <h3>Enter a number between 1 and 10</h3>

    <!-- Display feedback to the user -->
    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }

    <form asp-action="Guess" asp-controller="Home" method="post">
        <label for="Number">Guess the number:</label>
        <input type="number" id="Number" name="Number" min="1" max="10" required />
        <button type="submit">Submit</button>
    </form>
</body>
</html>